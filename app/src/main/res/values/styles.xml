<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButton">
        <item name="android:background">@drawable/shape_solid_white_radius_20</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:translationZ">8dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainActivityButton.Start">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="MainActivityButton.End">
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="MainActivityButton.Selector">
        <item name="android:background">@drawable/selector_solid_white_radius_20</item>
    </style>

    <style name="MainActivityButton.Selector.Start">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="MainActivityButton.Selector.End">
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ApartmentActivityText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
